# Copy to .env and fill values
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myapp_db
JWT_SECRET_KEY=super-secret-change-me
JWT_ACCESS_EXPIRES_SECONDS=900
JWT_REFRESH_EXPIRES_SECONDS=604800

# Optional settings
# A random Flask SECRET_KEY for session cookies
SECRET_KEY=change-me
# Comma-separated allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000
# Upload settings
UPLOAD_MAX_SIZE=5242880  # bytes (5MB)
UPLOAD_ALLOWED_EXT=pdf,png,jpg,jpeg
# AWS S3 (if used)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
